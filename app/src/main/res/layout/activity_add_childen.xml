<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.AddChildenActivity">
    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <include android:id="@+id/addChildren_toolbar"
        layout="@layout/appbar_basic"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        >
        <ImageView
            android:id="@+id/img_addChildren"
            android:layout_width="80dp"
            android:src="@drawable/child"
            android:layout_height="80dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="10dp"
            >
            <EditText
                android:id="@+id/edt_lastName"
                android:textSize="14dp"
                android:hint="Họ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edt_fisrtName"
                android:textSize="14dp"
                android:hint="Tên"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

        <EditText
            android:id="@+id/birth_day"
            android:hint="Ngày Sinh"
            android:layout_marginTop="5dp"
            android:inputType="date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            />
        <EditText
            android:id="@+id/edt_sex"
            android:hint="Giới Tính "
            android:layout_marginTop="5dp"
            android:inputType="date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            />
        <EditText
            android:id="@+id/edt_blood_group"
            android:hint="Nhóm Máu"
            android:layout_marginTop="5dp"
            android:inputType="date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            />
        <EditText
            android:id="@+id/date_start"
            android:hint="Ngày Nhập Học"
            android:layout_marginTop="5dp"
            android:inputType="date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            />
        <EditText
            android:id="@+id/edt_code"
            android:hint="Mã Trẻ"
            android:layout_marginTop="5dp"
            android:inputType="date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            />
        <EditText
            android:id="@+id/edt_place"
            android:hint="Địa chỉ thường chú"
            android:layout_marginTop="5dp"
            android:inputType="date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            />
        <EditText
            android:id="@+id/edt_allergies"
            android:hint="Dị Ứng Nếu Có"
            android:layout_marginTop="5dp"
            android:inputType="date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            />
        <EditText
            android:id="@+id/edt_note"
            android:hint="Ghi Chú Thêm"
            android:layout_marginTop="5dp"
            android:inputType="date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/size_btn_add_children"
                android:layout_height="40dp"
                android:src="@drawable/custom_edt_addchildren"
                />
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="18dp"
                    android:text="Chương Trình"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:text="Chưa có chường trình nào ."
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:maxLines="1"
                    android:layout_height="40dp"/>
            </LinearLayout>
            <Button
                android:id="@+id/btn_select_program"
                android:text="Chọn"
                android:background="@color/colorblue"
                android:textColor="@color/colorwhite"
                android:layout_width="wrap_content"
                android:layout_height="40dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:orientation="horizontal">
            <ImageView

                android:layout_width="@dimen/size_btn_add_children"
                android:layout_height="40dp"
                android:src="@drawable/custom_edt_addchildren"
                />
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="18dp"
                    android:text="Phụ Huynh"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:text="Chưa có phụ huynh nào ."
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:maxLines="1"
                    android:layout_height="40dp"/>
            </LinearLayout>
            <Button
                android:id="@+id/btn_parent"
                android:text="Chọn"
                android:background="@color/colorblue"
                android:textColor="@color/colorwhite"
                android:layout_width="wrap_content"
                android:layout_height="40dp"/>
        </LinearLayout>

    </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/btn_save"
        android:text="Lưu"
        android:background="@color/colorblue"
        android:textColor="@color/colorwhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        />
</LinearLayout>