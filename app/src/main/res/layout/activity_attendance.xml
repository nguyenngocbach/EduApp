<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include
        android:id="@+id/tb_Attendance"
        layout="@layout/appbar_basic"/>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/scroll">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/custom_button_kids_kind"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Mẫu giáo bé"
                    android:textAllCaps="false"
                    android:textSize="14dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/custom_button_kids_kind"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Mẫu giáo nhỡ"
                    android:textAllCaps="false"
                    android:textSize="14dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/custom_button_kids_kind"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Mẫu giáo lớn"
                    android:textAllCaps="false"
                    android:textSize="14dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/custom_button_kids_kind"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Mẫu giáo bé"
                    android:textAllCaps="false"
                    android:textSize="14dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/custom_button_kids_kind"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Mẫu giáo bé"
                    android:textAllCaps="false"
                    android:textSize="14dp"
                    android:layout_marginRight="30dp"/>

            </LinearLayout>

        </HorizontalScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:background="@drawable/customtableboder"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#111111"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng số"
                android:textSize="14dp"
                />
            <TextView
                android:textColor="#111111"
                android:layout_marginTop="5dp"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/0"
                />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:background="@drawable/customtableboder"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check in"
                android:textColor="#002DFF"
                />
            <TextView
                android:layout_marginTop="5dp"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#002DFF"
                />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:background="@drawable/customtableboder"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check out"
                />
            <TextView
                android:layout_marginTop="5dp"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:background="@drawable/customtableboder"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#FF0000"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vắng"
                />
            <TextView
                android:layout_marginTop="5dp"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#FF0000"
                />
        </LinearLayout>
    </LinearLayout>
    <GridView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:numColumns="3"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="400dp"/>

</LinearLayout>