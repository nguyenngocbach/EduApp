<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.SanitationActivity">

    <include layout="@layout/appbar_basic"
        android:id="@+id/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="40dp"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/all"
            android:padding="5dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Trẻ Em "
                android:textStyle="bold"
                android:textSize="17dp"
                android:gravity="center_vertical"
                android:padding="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="không có trẻ nào "
                android:padding="5dp"
                android:paddingStart="12dp"
                />
        </LinearLayout>

        <Button
            android:id="@+id/btn_pick_childrens"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:text="Chọn"
            android:textColor="@color/colorwhite"
            android:background="@color/colorblue"
            android:textAllCaps="false"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:background="@color/colergrey"
        android:layout_marginTop="10dp"
        />

    <LinearLayout
        android:id="@+id/layout_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Thời Gian"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_time"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:gravity="center"
            android:text="4:40 MP"
            android:textSize="13dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:padding="3dp"
            android:src="@drawable/ic_baseline_access_time_24" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/colergrey"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:text="Chọn trạng thái ta /bô *"
        android:textSize="18dp"
        android:padding="5dp"
        android:textStyle="bold"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <Button
            android:id="@+id/btn_ta"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorblue"
            android:text="Tã"
            android:textColor="@color/colorwhite"
            android:textAllCaps="false"
            />
        <Button
            android:id="@+id/btn_bo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Bô"
            android:textColor="@color/colorwhite"
            android:textAllCaps="false"
            android:background="@color/colergrey"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_changes"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        >
        <Button
            android:id="@+id/btn_one"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="13dp"
            android:text="Ướt"
            android:background="@drawable/custom_btn_indoor"
            android:textColor="@color/colorwhite"
            android:textAllCaps="false"
            />
        <Button
            android:id="@+id/btn_two"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="13dp"
            android:text="Bẩn"
            android:background="@drawable/custom_btn_outdoor"
            android:textColor="@color/colorwhite"
            android:textAllCaps="false"
            />
        <Button
            android:id="@+id/btn_three"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="13dp"
            android:text="Khô"
            android:background="@drawable/custom_btn_outdoor"
            android:textColor="@color/colorwhite"
            android:textAllCaps="false"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/colergrey"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:id="@+id/edt_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:hint="Nhập chi tiết ở đây"
        />
    <TextView
        android:id="@+id/txt_dem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_gravity="end"
        android:text="0/800"
        android:padding="5dp"
        />
    <Button
        android:id="@+id/btn_done"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:background="@color/colorblue"
        android:layout_gravity="center"
        android:text="Gửi"
        android:textColor="@color/colorwhite"
        android:textAllCaps="false"
        android:layout_marginTop="30dp"
        />
</LinearLayout>