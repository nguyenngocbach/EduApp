<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drw_Forgot_Login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ForgotPasswordActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            android:id="@+id/tb_Forgot_Login"
            layout="@layout/appbar_basic"/>
        <TextView
            android:layout_marginTop="50dp"
            android:textSize="24dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vui lòng nhập thông tin"
            />
        <TextView
            android:id="@+id/tvNotify"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhập Email đăng ký tài khoản KidsNow để nhận thông tin tài khoản"/>


       <LinearLayout
           android:background="@drawable/vien_edit_text"
           android:layout_marginTop="30dp"
           android:layout_marginLeft="40dp"
           android:layout_marginRight="40dp"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           >
           <EditText
               android:id="@+id/edt_Forgot_Content"
               android:layout_marginLeft="20dp"
               android:layout_marginRight="20dp"
               android:layout_gravity="center"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="Nhâp Email..."
               android:textSize="24dp"
               android:background="@null"
               />


       </LinearLayout>
        <Button
            android:id="@+id/btn_Forgot_Accept"
            android:layout_marginTop="20dp"
            android:layout_gravity="right"
            android:layout_marginRight="50dp"
            android:layout_width="120dp"
            android:layout_height="36dp"
            android:text="Xác nhận"
            android:background="@drawable/custom_button_login"
            />
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>