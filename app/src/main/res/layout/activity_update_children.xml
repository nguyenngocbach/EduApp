<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Activity.UpdateChildrenActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include android:id="@+id/children_profiles"
                layout="@layout/appbar_basic"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                >
                <ImageView
                    android:id="@+id/img_addChildren"
                    android:layout_width="110dp"
                    android:src="@drawable/child"
                    android:layout_height="110dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Họ"
                        android:textSize="12dp"
                        />
                    <EditText
                        android:id="@+id/edt_lastName"
                        android:textSize="12dp"
                        android:hint=""
                        android:text="Nguyễn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textSize="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tên"
                        />
                    <EditText
                        android:id="@+id/edt_fisrtName"
                        android:textSize="12dp"
                        android:hint="Tên"
                        android:text="Văn A"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:text="Ngày Sinh"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/birth_day"
                android:text="20/10/2020"
                android:inputType="date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                />
            <TextView
                android:text="Giới Tính"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edt_sex"
                android:text="Nam"
                android:inputType="date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                />
            <TextView
                android:text="Nhóm Máu"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edt_blood_group"
                android:inputType="date"
                android:text="B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"/>
            <TextView
                android:text="Ngày Nhập Học"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/date_start"
                android:hint=""
                android:text="20/20/2020"
                android:layout_marginTop="5dp"
                android:inputType="date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                />
            <TextView
                android:text="Mã Trẻ"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/edt_code"
                android:text="123454333"
                android:layout_marginTop="5dp"
                android:inputType="date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                />
            <TextView
                android:text="Địa Chi Thường Trú"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edt_place"
                android:text="Mỹ Đình- Nam Từ Liên - Hà Nội"
                android:inputType="date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                />
            <TextView
                android:text="Dị Ứng Nếu Có"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edt_allergies"
                android:layout_marginTop="5dp"
                android:inputType="date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                />

            <TextView
                android:text="Ghi Chú"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edt_note"
                android:layout_marginTop="5dp"
                android:inputType="date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:orientation="horizontal">
                <ImageView
                    android:padding="5dp"
                    android:layout_width="@dimen/size_btn_add_children"
                    android:layout_height="40dp"
                    android:src="@drawable/custom_edt_addchildren"
                    />
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="18dp"
                        android:text="Chương Trình"
                        android:gravity="center_vertical"
                        android:paddingStart="20dp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/txt_program"
                        android:layout_width="match_parent"
                        android:text="Mầm Non"
                        android:gravity="center_vertical"
                        android:paddingStart="20dp"
                        android:maxLines="1"
                        android:layout_height="40dp"/>
                </LinearLayout>
                <Spinner
                    android:id="@+id/btn_select_program"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <ImageView
                    android:padding="5dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/custom_edt_addchildren"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:maxLines="1"
                    android:gravity="center_vertical"
                    android:text="Phụ Huynh"
                    android:paddingStart="20dp"
                    android:textStyle="bold"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="80dp"
                >
                <ImageView
                    android:id="@+id/img_parents"
                    android:layout_width="80dp"
                    android:src="@drawable/parent"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:layout_height="100dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Họ"
                        android:textSize="10sp"
                        />
                    <EditText
                        android:id="@+id/edt_lastNameParents"
                        android:textSize="12dp"
                        android:text="Nguyễn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tên"
                        android:textSize="10dp"
                        />
                    <EditText
                        android:id="@+id/edt_fisrtNameParents"
                        android:textSize="12dp"
                        android:text="Văn A"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên"
                android:layout_marginStart="80dp"
                android:layout_marginEnd="20dp"
                android:textSize="12dp"
                />
            <EditText
                android:id="@+id/edt_relative"
                android:layout_marginStart="80dp"
                android:layout_marginEnd="20dp"
                android:textSize="12dp"
                android:text="Mẹ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:src="@drawable/vietnam"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NV + 84"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_gravity="center_vertical"
                    />
                <EditText
                    android:id="@+id/edt_sdt"
                    android:text="0123456789"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email Address"
                android:layout_marginStart="80dp"
                android:layout_marginEnd="20dp"
                android:textSize="12dp"
                />
            <EditText
                android:id="@+id/edt_email_address"
                android:layout_marginStart="80dp"
                android:layout_marginEnd="20dp"
                android:textSize="12dp"
                android:layout_marginBottom="10dp"
                android:text="abcxyz@email.com"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn_update"
                android:layout_width="match_parent"
                android:background="@color/colorblue"
                android:text="Lưu"
                android:textStyle="bold"
                android:textColor="@color/colorwhite"
                android:textAllCaps="false"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>