<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SearchingActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/appbar_basic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorblue"
        android:text="Tìm Kiếm"
        android:textAllCaps="false"
        android:textColor="@color/colorwhite"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:weightSum="10"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            android:orientation="vertical"
            >
            <Button
                android:id="@+id/btnProgram"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Chương Trình"
                android:textAllCaps="false"
                android:textColor="@color/colorwhite"
                android:background="@color/colorblue"
                android:layout_margin="1dp"
                android:textSize="13dp"
                />
            <Button
                android:id="@+id/btnActive"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Hoạt Động"
                android:textAllCaps="false"
                android:textColor="@color/colorwhite"
                android:background="@color/colergrey"
                android:layout_margin="1dp"
                android:textSize="13dp"
                />
            <Button
                android:id="@+id/btnRagenDate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Phạm Vị Ngày"
                android:textAllCaps="false"
                android:textColor="@color/colorwhite"
                android:background="@color/colergrey"
                android:layout_margin="1dp"
                android:textSize="13dp"
                />
            <Button
                android:id="@+id/btnStaff"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Nhận Viên"
                android:textAllCaps="false"
                android:textColor="@color/colorwhite"
                android:background="@color/colergrey"
                android:layout_margin="1dp"
                android:textSize="13dp"
                />
        </LinearLayout>
        <FrameLayout
            android:id="@+id/frame_layoyt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6.5"
            android:layout_margin="2dp"
            android:layout_marginStart="5dp"
            />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>